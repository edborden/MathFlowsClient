.container-fluid
	.row
		.col-xs-2.side-nav			
			h2#logo MathFlows
			h5#tagline Workflows for math teachers
			p
				button.btn.btn-primary
					|Login&nbsp;&nbsp;
					i.fa-facebook
			p 
				button.btn.btn-default click="newBlock"
					|Add Block&nbsp;&nbsp;
					i.fa-plus
			p 
				button.btn.btn-default click="newPage"
					|Add Page&nbsp;&nbsp;
					i.fa-plus
			p 
				button.btn.btn-default click="removePage"
					|Delete Page&nbsp;&nbsp;
					i.fa-minus
			p
				a.btn.btn-default.btn-sm href=model.pdfLink 
					|Get PDF&nbsp;&nbsp;
					i.fa-download
			if model.document.multiplePages
				hr
				each page in model.document.pages
					p 
						link-to "page" page class="btn btn-warning"
							|Page&nbsp;
							page.number
		.col-xs-10
			grid-editor grid=model widgetRendererTemplate="components/block-renderer" action="editBlock"